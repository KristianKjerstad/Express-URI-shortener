<body>
    <div class="container" >
        <h1>URL Shrinker</h1>
        <form action="" method="POST" class="my-4 row g-3">
            <div class="col-md-8">
                <input type="url" name="fullUrl" id="fullUrl" placeholder="url" required class="form-control">
            </div>
            <div class="col-md-4">
                <button class="btn btn-success" type="submit">Shrink</button>
            </div>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="https://vg.no">vg.no</a></td>
                    <td><a href="/123123">123123</a></td>
                    <td>10</td>
                </tr>
            </tbody>
        </table>
    </div>
